    "version": "0.2.0",
    "configurations": [
        {
            "name": "NetCoreDbg Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/netcoreapp3.0/foo.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "sh",
                "pipeArgs": ["-c"],
                "debuggerPath": "/usr/bin/netcoredbg"
            }
        }
    ]
}
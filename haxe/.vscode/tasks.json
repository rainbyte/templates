{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "hxml",
            "file": "build.hxml",
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ],
            "group": "build"
        },
        {
            "label": "run via js",
            "type": "shell",
            "command": "node bin/example.js",
            "problemMatcher": [ ]
        },
        {
            "label": "run via neko",
            "type": "shell",
            "command": "neko bin/example.n",
            "problemMatcher": [ ]
        }
    ]
}